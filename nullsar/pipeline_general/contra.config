apptainer {
    enabled = true
    runOptions = '-B /b -B /bscratch -B /homes'
    envWhitelist = 'APPTAINER_BINDPATH, APPTAINER_LD_LIBRARY_PATH'
}

report.overwrite = 'true'
trace.overwrite = 'true'

process {
    executor = 'condor'

        withLabel: 'filtool' {
        cpus = 12
        memory = '32 GB'
        time = '1h'
        maxRetries = 1
        }

        withLabel: 'nullsar_zap' {
        cpus = 48
        memory = '360 GB'
        time = '1h'
        maxRetries = 3
        }

        withLabel: 'nullsar_fold' {
        cpus = 1
        memory = '12 GB'
        time = '1h'
        maxRetries = 3
        }

        

}
