apptainer {
        enabled = true
        runOptions = '-B /hercules/:/hercules/'
        envWhitelist = 'APPTAINER_BINDPATH, APPTAINER_LD_LIBRARY_PATH'
}

report.overwrite = 'true'
trace.overwrite = 'true'

process {
    executor  = 'slurm'
    
        withLabel: 'filtool' {
        cpus = 24
        memory = '180 GB'
        time = '2h'
        queue = 'short.q'
        maxRetries = 3
        }

        withLabel: 'nullsar_zap' {
        cpus = 48
        memory = '360 GB'
        time = '2h'
        queue = 'short.q'
        maxRetries = 3
        }

        withLabel: 'nullsar_fold' {
        cpus = 1
        memory = '12 GB'
        time = '2h'
        queue = 'short.q'
        maxRetries = 3
        }
}