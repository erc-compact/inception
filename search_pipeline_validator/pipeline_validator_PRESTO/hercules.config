apptainer {
        enabled = true
        runOptions = '--nv -B /hercules/:/hercules/'
        envWhitelist = 'APPTAINER_BINDPATH, APPTAINER_LD_LIBRARY_PATH'
}

report.overwrite = 'true'
trace.overwrite = 'true'

process {
    executor  = 'slurm'

    errorStrategy = 'retry'
    maxRetries = 3
    maxErrors = '-1' 
        

        withLabel: 'injection' {
        cpus = 48
        memory = '360 GB'
        time = '2h'
        queue = 'short.q'
        maxRetries = 3
        }

        withLabel: 'rfifind' {
        cpus = 4
        memory = '32 GB'
        time = '2h'
        queue = 'short.q'
        maxRetries = 1
        }

        withLabel: 'pulsarx_parfold' {
        cpus = 12
        memory = '90 GB'
        time = '2h'
        queue = 'short.q'
        maxRetries = 1
        }

        withLabel: 'presto_search' {
        cpus = 48
        memory = '360 GB'
        time = { 4.hour * task.attempt }
        queue = { (task.time <= 4.hour) ? "short.q" : "long.q" }
        maxRetries = 2
        }

        withLabel: 'presto_sift' {
        cpus = 1
        memory = '7 GB'
        time = '1h'
        queue = 'short.q'
        maxRetries = 1
        }

        withLabel: 'presto_fold' {
        cpus = 12
        memory = '90 GB'
        time = '4h'
        queue = 'short.q'
        maxRetries = 1
        }

        withLabel: 'pics_scorer' {
        cpus = 1
        memory = '7 GB'
        time = '1h'
        queue = 'short.q'
        maxRetries = 1
        }

}