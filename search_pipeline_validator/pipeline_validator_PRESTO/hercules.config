apptainer {
        enabled = true
        runOptions = '--nv -B /hercules/:/hercules/'
        envWhitelist = 'APPTAINER_BINDPATH, APPTAINER_LD_LIBRARY_PATH'
}

report.overwrite = 'true'
trace.overwrite = 'true'

process {
    executor  = 'slurm'

    errorStrategy = 'retry'
    maxRetries = 3
    maxErrors = '-1' 
        

        withLabel: 'injection' {
        cpus = 48
        memory = '360 GB'
        time = '2h'
        queue = 'short.q'
        maxRetries = 3
        }

        withLabel: 'filtool' {
        cpus = 24
        memory = '180 GB'
        time = '2h'
        queue = 'short.q'
        maxRetries = 1
        }

        withLabel: 'pulsarx_parfold' {
        cpus = 12
        memory = '90 GB'
        time = '2h'
        queue = 'short.q'
        maxRetries = 1
        }

        withLabel: 'peasoup' {
        cpus = 1
        memory = '72 GB'
        time = { 4.hour * task.attempt }
        queue = { (task.time <= 4.hour) ? "short.q" : "gpu.q" }
        errorStrategy = { task.exitStatus in (137..140) || task.exitStatus == 124 ? 'retry' : 'ignore' }
        clusterOptions = '--gres=gpu:1'
        maxRetries = 2
        }

        withLabel: 'pulsarx_candfold' {
        cpus = 6
        memory = '45 GB'
        time = '1h'
        queue = 'short.q'
        maxRetries = 1
        }

        withLabel: 'candidate_filter' {
        cpus = 1
        memory = '32 GB'
        time = '2h'
        queue = 'short.q'
        maxRetries = 1
        }

        withLabel: 'pics_scorer' {
        cpus = 1
        memory = '7 GB'
        time = '1h'
        queue = 'short.q'
        maxRetries = 1
        }

}